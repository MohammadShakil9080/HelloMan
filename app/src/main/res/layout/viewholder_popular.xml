<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/text12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:textColor="#373b54"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/image6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/pop_1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/text12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/text13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#373b54"
        app:layout_constraintTop_toBottomOf="@id/image6"
        app:layout_constraintStart_toStartOf="@id/image6"
        app:layout_constraintEnd_toEndOf="@id/image6"/>
    <TextView
        android:id="@+id/text14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:textColor="#FF3D00"
        android:textSize="15sp"

        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/text13"
        app:layout_constraintEnd_toStartOf="@id/text13"



</androidx.constraintlayout.widget.ConstraintLayout>